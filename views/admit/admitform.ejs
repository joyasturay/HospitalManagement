<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admit Patient</title>
</head>
<body>
    <h1>Admit Patient to <%= hospital.name %></h1>
    <form action="/admit/<%= hospital._id %>/<%= patient._id %>" method="POST">
        <label for="bed">Select Bed:</label>
        <select id="bed" name="bed">
            <% beds.forEach(bed => { %>
                <option value="<%= bed._id %>"><%= bed.name %></option>
            <% }) %>
        </select>
        <button type="submit">Admit</button>
    </form>
</body>
</html>
