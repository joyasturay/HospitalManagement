<% layout('layouts/boilerplate.ejs') -%>

<h1 class="text-center">Add Nurse</h1>
<div class="row">
  <div class="col-8 offset-2">
<form action="/hospitals/<%= hospital._id %>/nurses" method="POST" novalidate class="needs-validation">

  <div>
    <label for="name" class="form-label">Nurse's Name:</label>
    <input type="text" name="name" placeholder="Nurse's Name"  class="form-control" required />
  </div>

    <div>
    <label for="shiftTimings" class="form-label">Shift Timings:</label>
    <input type="text" name="shiftTimings" placeholder="Shift Timings"  class="form-control" required />
    </div>

    <div>
    <label for="contactInfo" class="form-label">Contact Info:</label>
    <input type="text" name="contactInfo" placeholder="Contact Info"  class="form-control" required/>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Add Nurse</button>
  </form>
  </div>
  </div>