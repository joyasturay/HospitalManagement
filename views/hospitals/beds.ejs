<% layout('layouts/boilerplate.ejs') -%>
<body>
    <h1 class="text-center">Add Bed to <%= hospital.name %></h1>
    <div class="row">
    <div class="col-8 offset-2">
    <form action="/hospitals/<%= hospital._id %>/beds/add" method="POST">
        <label for="bedNumber" class="form-label">Bed Number:</label>
        <input type="number" id="bedNumber" name="bedNumber" class="form-control" required>
        <br>
        <label for="ward" class="form-label">Ward:</label>
        <input type="text" id="ward" name="ward" class="form-control">
        <br>
        <label for="isOccupied">Is Occupied:</label>
        <input type="checkbox" id="isOccupied" name="isOccupied">
        <br>
        <button type="submit" class="btn btn-primary mt-2">Add Bed</button>
    </form>
    </div>
    </div>
    <a href="/hospitals/<%= hospital._id %>" class="btn btn-primary offset-2 mt-2">Back to Hospital Details</a>
</body>
