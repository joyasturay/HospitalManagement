<% layout('layouts/boilerplate.ejs') -%>
    <title>Beds in <%= hospital.name %></title>
<body>
    <h1>Beds in <%= hospital.name %></h1>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">Bed Number</th>
            <th scope="col">Ward</th>
            <th scope="col">Is Occupied</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody></tbody>
            <% beds.forEach(function(bed) { %>
                <tr>
                    <td><%= bed.bedNumber %></td>
                    <td><%= bed.ward %></td>
                    <td><%= bed.isOccupied ? 'Yes' : 'No' %></td>
                    <td>
                        <a href="/hospitals/<%= hospital._id %>/beds/<%= bed._id %>/edit" class="btn btn-primary">Edit</a>
                    </td>
                    <td>
                        <form action="/hospitals/<%= hospital._id %>/beds/<%= bed._id %>/delete?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
      </table>
    <a href="/hospitals/<%= hospital._id %>">Back to Hospital Details</a>
</body>
